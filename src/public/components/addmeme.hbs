<title>Post Your Meme</title>


<div class="fixed-action-btn">
    <a href="#memeadd" class="btn-floating btn-large red modal-trigger">
        <i class="large material-icons" style="font-size: 45px;">add_to_photos</i>
    </a>
</div>

<!-- Modal Structure -->
<div id="memeadd" class="modal">
    <center>
        <form id="form" class="col s12" action="/memeadd/add" method="post" enctype="multipart/form-data">

            <div class="modal-content">
                <div class="row">
                    <div class="input-field col s11">
                        <input type="text" name="memetitle" id="input_text">
                        <label id="labelcolor" for="input_text">Add Title or Caption</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s11">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>Add Your Post</span>
                                <input type="file" type="file" accept="image/*" name="memeimg"
                                    onchange="loadFile(event)">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <img id="output" width="200" /><br><br>
                <input class="btn" type="submit">
            </div>
        </form>
    </center>
</div>

<link rel="stylesheet" href="../css/materialize.css">
<script async defer src="../js/materialize.js"></script>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };

    $(document).ready(function () {
        $('.modal').modal();
    });
</script>

<style>
    #addform {
        border: 3px black solid;
        width: 60%;
        height: 40%;
        position: absolute;
        top: 30%;
        left: 20%;
    }

    #labelcolor {
        color: black;
        font-size: 20px;
        font-weight: 700;
    }

    @media(max-width: 400px) {
        #labelcolor {
            color: black;
            font-size: 15px;
            font-weight: 700;
        }
    }

    @media(max-width: 350px) {
        #labelcolor {
            color: black;
            font-size: 13px;
            font-weight: 700;
        }
    }
</style>